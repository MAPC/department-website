%main.tools
  .main-overlay
  %section.subheader
    .splash-icon
      %i.users.huge.icon
    .breadcrumb-wrap
      %nav.breadcrumbs
        = render_breadcrumbs
        %span About Us
    .container
      .grid-row
        .section-info.two-thirds
